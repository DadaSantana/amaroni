{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "config": {
    "firebase": {
      "databaseURL": "https://amaroni-it.firebaseio.com",
      "storageBucket": "gs://amaroni-it.appspot.com",
      "projectId": "amaroni-it"
    }
  }  
}
